{
  "name": "vsc-codebase-context",
  "displayName": "Codebase Context Clipper",
  "description": "Easily clip folder structures as trees and code interfaces to enhance your AI prompts with accurate codebase context.",
  "version": "1.3.0",
  "publisher": "thomasbarkats",
  "author": {
    "name": "Thomas BARKATS"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "folder",
    "structure",
    "tree",
    "clipboard",
    "copy",
    "directory",
    "AI",
    "LLM",
    "prompt"
  ],
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "icon": "images/icon.png",
  "bugs": {
    "url": "https://github.com/thomasbarkats/vsc-codebase-context/issues"
  },
  "homepage": "https://github.com/thomasbarkats/vsc-codebase-context/blob/main/README.md",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vsc-codebase-context"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "folder-structure.copyStructure",
        "title": "ðŸ“‹ Copy Structure"
      },
      {
        "command": "folder-structure.copyInterface",
        "title": "ðŸ“‹ Copy File Interface"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "folder-structure.copyStructure",
          "group": "navigation"
        },
        {
          "when": "resourceExtname =~ /\\.(ts|js|jsx|tsx|py)$/",
          "command": "folder-structure.copyInterface",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:publish": "vsce publish",
    "vscode:test": "npm run package && code --install-extension $(ls -t vsc-codebase-context-*.vsix | head -n 1)",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.97.0",
    "vsce": "^2.15.0"
  }
}
