{
  "name": "vsc-folder-structure-copy",
  "displayName": "Folder Structure Copy",
  "description": "Easily copy folder structures to clipboard with a tree-like format. Useful for LLM prompts.",
  "version": "1.0.0",
  "publisher": "thomasbarkats",
  "author": {
    "name": "Thomas BARKATS"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "folder",
    "structure",
    "tree",
    "clipboard",
    "copy",
    "directory",
    "AI",
    "LLM",
    "prompt"
  ],
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "icon": "images/icon.png",
  "bugs": {
    "url": "https://github.com/thomasbarkats/vsc-folder-structure-copy/issues"
  },
  "homepage": "https://github.com/thomasbarkats/vsc-folder-structure-copy/blob/main/README.md",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vsc-folder-structure-copy"
  },
  "contributes": {
    "commands": [
      {
        "command": "folder-structure.copyStructure",
        "title": "ðŸ“‹ Copy Structure Prompt"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "folder-structure.copyStructure",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:publish": "vsce publish",
    "vscode:test": "npm run package && code --install-extension vsc-folder-structure-copy-1.0.0.vsix",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.97.0",
    "typescript": "^4.9.5",
    "vsce": "^2.15.0"
  }
}